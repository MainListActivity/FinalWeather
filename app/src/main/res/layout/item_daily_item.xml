<?xml version="1.0" encoding="utf-8"?>
<cn.y.finalweather.bamUi.BamLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bgMainWeather"
    android:gravity="center|top"
    android:onClick="nullClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dual_bg_shadow"
            android:gravity="center|top"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日出时间"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_sunset_up_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sunset_up_sun" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sunset_up_di" />

            <TextView
                android:id="@+id/tv_daily_astro_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:32"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dual_bg_shadow"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日落时间"
                android:textColor="@color/textColor"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/iv_sunset_down_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sunset_down_sun" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sunset_down_di" />

            <TextView
                android:id="@+id/tv_daily_astro_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:32"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dual_bg_shadow"
            android:gravity="center|top"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白天天气"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_daily_code_d"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/weather_100" />

            <TextView
                android:id="@+id/tv_daily_txt_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小雨"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dual_bg_shadow"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间天气"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_daily_code_n"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/weather_100" />

            <TextView
                android:id="@+id/tv_daily_txt_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小雨"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dual_bg_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_icon_realfeel" />

            <TextView
                android:id="@+id/tv_daily_tmp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_tmp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="o"
                android:textColor="@color/textColor"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_daily_wind_deg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/trend_wind_1" />

            <TextView
                android:id="@+id/tv_daily_wind_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微风"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_wind_spd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Kmph"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dual_bg_shadow"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度："
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="53"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/droplet" />

            <TextView
                android:id="@+id/tv_daily_pcpn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="气压："
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_pres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1009"
                android:textColor="@color/textColor"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="能见度："
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_vis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/tv_daily_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dual_bg_shadow"
        android:gravity="center"
        android:text="2016-07-30"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

</cn.y.finalweather.bamUi.BamLinearLayout>